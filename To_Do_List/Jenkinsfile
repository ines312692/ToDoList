pipeline {
  agent {
    kubernetes {
      label 'jenkins-frontend'
      namespace 'default'
      serviceAccount 'jenkins-deployer'
    }
  }

  environment {
    CHART_PATH = './charts/frontend-chart'
    NAMESPACE = 'jenkins-developer'
  }

  stages {
    stage('Deploy Frontend') {
      steps {
        container('helm') {
          sh '''
            echo "DÃ©ploiement Frontend"
            helm upgrade --install todo-frontend $CHART_PATH \
              --namespace $NAMESPACE \
              --create-namespace \
              --wait
          '''
        }
      }
    }

    stage('Verify') {
      steps {
        container('kubectl') {
          sh '''
            kubectl get pods -n $NAMESPACE -l app=todo-frontend
            kubectl get svc -n $NAMESPACE -l app=todo-frontend
          '''
        }
      }
    }
  }

  post {
    failure {
      container('kubectl') {
        sh 'kubectl logs -l app=todo-frontend -n $NAMESPACE --tail=50 || true'
      }
    }
  }
}
