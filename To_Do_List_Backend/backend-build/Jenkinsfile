pipeline {
  agent {
    kubernetes {
      label 'jenkins-backend-build'
      defaultContainer 'docker'
      namespace 'jenkins-developer'
      serviceAccount 'jenkins-deployer'
    }
  }

  environment {
    DOCKERHUB_USERNAME = 'inestmimi123'
    DOCKERHUB_IMAGE = 'todo-backend'
    IMAGE_TAG = 'latest'
    DOCKER_BUILDKIT = '1'
  }

  stages {
    stage('Checkout & Cache Preparation') {
      steps {
        script {
          sh '''
            echo "Using persistent workspace at /workspace/backend-build"
            mkdir -p /workspace/backend-build
            cp -r . /workspace/backend-build/ || true
          '''
        }
      }
    }

    stage('Docker Login') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
          sh '''
            echo "$PASSWORD" | docker login -u "$USERNAME" --password-stdin
          '''
        }
      }
    }

    stage('Build Backend Image') {
      steps {
        dir('To_Do_List_Backend') {
          sh '''
            echo "Building with Docker BuildKit and local cache..."
            DOCKER_BUILDKIT=1 docker build \
              --build-arg BUILDKIT_INLINE_CACHE=1 \
              -t $DOCKERHUB_USERNAME/$DOCKERHUB_IMAGE:$IMAGE_TAG \
              .
          '''
        }
      }
    }


    stage('Push to Docker Hub') {
      steps {
        sh '''
          echo "Pushing images..."
          docker push $DOCKERHUB_USERNAME/$DOCKERHUB_IMAGE:$IMAGE_TAG
        '''
      }
    }

    stage('Cache Cleanup') {
      steps {
        sh '''
          echo "Cleaning up old Docker images to preserve cache space..."
          docker system prune -f --filter "until=24h"
        '''
      }
    }
  }

  post {
    always {
      sh '''
        echo "Saving build artifacts to persistent storage..."
        cp -r . /workspace/backend-build-$(date +%Y%m%d-%H%M%S)/ || true
      '''
    }
    success {
      echo "Backend image built and pushed successfully with persistent cache!"
    }
    failure {
      echo "Build or push failed."
    }
  }
}